{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "雨水",
  "version": "0.1.0",
  "identifier": "net.chiven.rainwater",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3004",
    "beforeDevCommand": "npm run dev"
  },
  "app": {
    "windows": [
      {
        "title": "Rainwater",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true,
      "capabilities": [],
      "assetProtocol": {
        "scope": ["$APPDATA/**", "$RESOURCE/../**", "**"],
        "enable": true
      }
    },
    "withGlobalTauri": true,
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "windowSize": {
          "width": 800,
          "height": 600
        }
      }
    }
  },
  "plugins": {
    "@tauri-apps/plugin-http": {}
  }
}
